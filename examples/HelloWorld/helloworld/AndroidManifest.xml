<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.roboremote.example.helloworld"
      android:versionCode="1"
      android:versionName="1.0.0">

    <application android:label="HelloWorld">

        <activity android:name="com.roboremote.example.helloworld.HelloWorld"
                  android:label="HelloWorld">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TestActivity"
                    android:label="Test Activity"></activity>

        <activity android:name=".WebviewActivity"
                  android:label="WebView Activity"></activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>

    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8" />

</manifest> 